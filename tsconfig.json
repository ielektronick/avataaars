{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "isolatedModules": true,
    "sourceMap": true,
    "newLine": "lf",
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "paths": {
      "@utils": ["./src/utils"]
    }
  },
  "types": ["node"]
}
